{"sections":[],"abstract":[{"type":"text","text":"Registers a WhatsApp number for WhatsApp Business messaging."}],"primaryContentSections":[{"kind":"declarations","declarations":[{"tokens":[{"kind":"text","text":"+ ("},{"kind":"typeIdentifier","text":"void","preciseIdentifier":"c:v"},{"text":") ","kind":"text"},{"kind":"identifier","text":"registerWhatsappNumber:"},{"text":"(","kind":"text"},{"text":"NSString","kind":"typeIdentifier","preciseIdentifier":"c:objc(cs)NSString"},{"kind":"text","text":" *) "},{"text":"number","kind":"internalParam"},{"kind":"text","text":";"}],"languages":["occ"],"platforms":["iOS"]}]},{"parameters":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"The phone number in E.164 international format."}]}],"name":"number"}],"kind":"parameters"},{"kind":"content","content":[{"anchor":"discussion","text":"Discussion","level":2,"type":"heading"},{"type":"paragraph","inlineContent":[{"text":"Associates a WhatsApp number with the current device for WhatsApp Business API","type":"text"},{"type":"text","text":" "},{"type":"text","text":"messaging campaigns. This enables rich messaging with images, documents, and"},{"type":"text","text":" "},{"text":"interactive buttons through WhatsApp.","type":"text"}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The phone number must be in E.164 international format:"}]},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Start with ‘+’ followed by country code"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"No spaces, dashes, or parentheses"}]}]},{"content":[{"inlineContent":[{"text":"Must be a valid WhatsApp-enabled number","type":"text"}],"type":"paragraph"}]}],"type":"unorderedList"},{"level":2,"text":"Example","anchor":"Example","type":"heading"},{"inlineContent":[{"text":"Register WhatsApp during communication preferences setup:","type":"text"}],"type":"paragraph"},{"type":"codeListing","syntax":"swift","code":["class CommunicationPreferencesManager {","","    struct Preferences {","        var pushEnabled: Bool","        var smsEnabled: Bool","        var whatsappEnabled: Bool","        var whatsappNumber: String?","    }","","    func savePreferences(_ preferences: Preferences) {","        \/\/ Register WhatsApp if user opted in and provided number","        if preferences.whatsappEnabled, let number = preferences.whatsappNumber {","            let normalizedNumber = normalizePhoneNumber(number)","            Pushwoosh.configure.registerWhatsappNumber(normalizedNumber)","        }","","        \/\/ Update channel preferences tags","        Pushwoosh.configure.setTags([","            \"channel_push\": preferences.pushEnabled,","            \"channel_sms\": preferences.smsEnabled,","            \"channel_whatsapp\": preferences.whatsappEnabled","        ])","    }","","    private func normalizePhoneNumber(_ phone: String) -> String {","        let digits = phone.filter { $0.isNumber }","        return phone.hasPrefix(\"+\") ? \"+\\(digits)\" : \"+\\(digits)\"","    }","}"]}]}],"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/pushwooshcore\/pwconfiguration\/registerwhatsappnumber:"]}],"hierarchy":{"paths":[["doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore","doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore\/PWConfiguration"]]},"schemaVersion":{"minor":3,"major":0,"patch":0},"metadata":{"symbolKind":"method","roleHeading":"Type Method","role":"symbol","externalID":"c:objc(pl)PWConfiguration(cm)registerWhatsappNumber:","modules":[{"name":"PushwooshCore"}],"title":"registerWhatsappNumber:","navigatorTitle":[{"kind":"identifier","text":"registerWhatsappNumber:"}],"fragments":[{"text":"+ ","kind":"text"},{"kind":"identifier","text":"registerWhatsappNumber:"}]},"kind":"symbol","identifier":{"interfaceLanguage":"occ","url":"doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore\/PWConfiguration\/registerWh