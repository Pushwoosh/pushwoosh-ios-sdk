{"variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/pushwooshcore\/pwconfiguration\/sendbadges:"]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"kind":"symbol","metadata":{"role":"symbol","modules":[{"name":"PushwooshCore"}],"roleHeading":"Type Method","symbolKind":"method","navigatorTitle":[{"text":"sendBadges:","kind":"identifier"}],"externalID":"c:objc(pl)PWConfiguration(cm)sendBadges:","fragments":[{"kind":"text","text":"+ "},{"kind":"identifier","text":"sendBadges:"}],"title":"sendBadges:"},"identifier":{"url":"doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore\/PWConfiguration\/sendBadges:","interfaceLanguage":"occ"},"hierarchy":{"paths":[["doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore","doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore\/PWConfiguration"]]},"abstract":[{"text":"Synchronizes the application badge number with Pushwoosh servers.","type":"text"}],"primaryContentSections":[{"kind":"declarations","declarations":[{"platforms":["iOS"],"languages":["occ"],"tokens":[{"kind":"text","text":"+ ("},{"preciseIdentifier":"c:v","text":"void","kind":"typeIdentifier"},{"text":") ","kind":"text"},{"kind":"identifier","text":"sendBadges:"},{"text":"(","kind":"text"},{"text":"NSInteger","kind":"typeIdentifier","preciseIdentifier":"c:@T@NSInteger"},{"text":") ","kind":"text"},{"kind":"internalParam","text":"badge"},{"kind":"text","text":";"}]}]},{"kind":"parameters","parameters":[{"name":"badge","content":[{"inlineContent":[{"text":"The current application badge number (0 to clear badge).","type":"text"}],"type":"paragraph"}]}]},{"content":[{"level":2,"text":"Discussion","anchor":"discussion","type":"heading"},{"inlineContent":[{"type":"text","text":"Reports the current badge count to Pushwoosh for analytics and to enable"},{"text":" ","type":"text"},{"type":"text","text":"badge-based segmentation. This is useful for:"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Analytics"}],"type":"strong"},{"type":"text","text":": Track user engagement through unread counts"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"type":"text","text":"Segmentation"}],"type":"strong"},{"type":"text","text":": Target users with high\/low badge counts"}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"text":"Badge management","type":"text"}]},{"type":"text","text":": Allow server-side badge manipulation"}],"type":"paragraph"}]}],"type":"unorderedList"},{"inlineContent":[{"text":"Call this method whenever you update the app badge to keep Pushwoosh in sync.","type":"text"}],"type":"paragraph"},{"type":"heading","text":"Example","level":2,"anchor":"Example"},{"inlineContent":[{"type":"text","text":"Sync badge with Pushwoosh when updating unread counts:"}],"type":"paragraph"},{"code":["class NotificationBadgeManager {","","    private(set) var unreadCount: Int = 0 {","        didSet {","            updateBadge()","        }","    }","","    func markAsRead(_ notificationIds: [String]) {","        unreadCount = max(0, unreadCount - notificationIds.count)","    }","","    func handleNewNotification() {","        unreadCount += 1","    }","","    func clearAll() {","        unreadCount = 0","    }","","    private func updateBadge() {","        \/\/ Update system badge","        if #available(iOS 16.0, *) {","            UNUserNotificationCenter.current().setBadgeCount(unreadCount)","        } else {","            UIApplication.shared.applicationIconBadgeNumber = unreadCount","        }","","        \/\/ Sync with Pushwoosh","        Pushwoosh.configure.sendBadges(unreadCount)","    }","}","","\/\/ Usage in AppDelegate","class AppDelegate: UIApplicationDelegate {","","    func applicationDidBecomeActive(_ application: UIApplication) {","        \/\/ Sync current badge state when app becomes active","        let currentBadge = application.applicationIconBadgeNumber","        Pushwoosh.configure.sendBadges(currentBadge)","    }","}"],"syntax":"swift","type":"codeListing"}],"kind":"content"}],"sections":[],"references":{"doc://com.pushwoosh.PushwooshCore/documentation/PushwooshCore/PWConfiguration/sendBadges:":{"navigatorTitle":[{"text":"sendBadges:","kind":"identifier"}],"type":"topic","url":"\/documentation\/pushwooshcore\/pwconfiguration\/sendbadges:","identifier":"doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore\/PWConfiguration\/sendBadges:","abstract":[{"text":"Synchronizes the application badge number with Pushwoosh servers.","type":"text"}],"role":"symbol","title":"sendBadges:","kind":"symbol","fragments":[{"text":"+ ","kind":"text"},{"kind":"identifier","text":"sendBadges:"}]},"doc://com.pushwoosh.PushwooshCore/documentation/PushwooshCore":{"title":"PushwooshCore","url":"\/documentation\/pushwooshcore","kind":"symbol","role":"collection","type":"topic","identifier":"doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore","abstract":[{"type":"text","text":"Core foundation module for Pushwoosh SDK."}]},"doc://com.pushwoosh.PushwooshCore/documentation/PushwooshCore/PWConfiguration":{"url":"\/documentation\/pushwooshcore\/pwconfiguration","title":"PWConfiguration","abstract":[],"fragments":[{"text":"PWConfiguration","kind":"identifier"}],"kind":"symbol","type":"topic","identifier":"doc:\/\/com.pushwoosh.PushwooshCore\/documentation\/PushwooshCore\/PWConfiguration","role":"symbol"}}}